{
  "version": 2,
  "buildCommand": "cd frontend && pnpm install && VITE_API_URL=https://app-rawyclbe.fly.dev pnpm build",
  "outputDirectory": "frontend/dist",
  "routes": [
    {
      "src": "/assets/(.*)\\.js$",
      "headers": { "Content-Type": "application/javascript; charset=utf-8" },
      "dest": "/assets/$1.js"
    },
    {
      "src": "/assets/(.*)\\.css$", 
      "headers": { "Content-Type": "text/css; charset=utf-8" },
      "dest": "/assets/$1.css"
    },
    {
      "src": "/(registerSW\\.js|manifest\\.webmanifest|vite\\.svg|.*\\.png)$",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
