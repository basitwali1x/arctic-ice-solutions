{
  "version": 2,
  "buildCommand": "cd frontend && pnpm install && VITE_API_URL=https://app-rawyclbe.fly.dev pnpm build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/pr/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/((?!assets|manifest|registerSW|sw|vite\\.svg|workbox).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
